# ════════════════════════════════
# 🧿 NOONA PROJECT - SHARED ENV
# ════════════════════════════════
NODE_ENV=production
PROJECT_NAME=The Noona Project

# JWT Auth Keys (used across Vault + Portal)
JWT_SECRET=super-secret-key
JWT_PRIVATE_KEY_PATH=/keys/private.pem
JWT_PUBLIC_KEY_PATH=/keys/public.pem

# Internal Service JWT Exchange
VAULT_JWT=example-token

# ════════════════════════════════
# 📦 NOONA-VAULT ENV
# ════════════════════════════════

# Vault Server
VAULT_PORT=3120

# MongoDB
MONGO_USER=admin
MONGO_PASSWORD=changeme
MONGO_DATABASE=noona

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# MariaDB
MARIADB_USER=noona
MARIADB_PASSWORD=changeme
MARIADB_DATABASE=noona

# Milvus
MILVUS_ADDRESS=milvus:19530

# Vault Health Checks
CHECK_INTERVAL_HOURS=2

# ════════════════════════════════
# 🌐 NOONA-PORTAL ENV
# ════════════════════════════════

# Portal Server
PORTAL_PORT=3121

# Discord Bot Integration
DISCORD_CLIENT_ID=your-client-id-here
DISCORD_TOKEN=your-discord-token-here

# Kavita Integration
KAVITA_API_KEY=your-kavita-api-key
KAVITA_SERVER_URL=http://your-kavita-url

# Redis (also used by Vault)
REDIS_HOST=redis
REDIS_PORT=6379

# Vault API URL (for handshakes and secure token pull)
VAULT_API_URL=http://noona-vault:3120

# JWT for Portal-specific logic
PORTAL_JWT_SECRET=secure-portal-token

# ════════════════════════════════
# 📦 OPTIONAL SERVICE DEFAULTS
# ════════════════════════════════

# Use these for Docker port bindings or logging if needed later
MONGODB_PORT=27017
MARIADB_PORT=3306
MILVUS_PORT=19530
MINIO_PORT=9000
ETCD_PORT=2379
